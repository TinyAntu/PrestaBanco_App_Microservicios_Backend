pipeline {
    agent any
    tools {
        maven 'Maven' // Define tu Maven Tool
    }
    stages {
        stage('Build maven') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/TinyAntu/PrestaBanco_App_Microservicios_Backend.git']])
                bat 'mvn clean package'
            }
        }  

        stage('Build docker image') {
            steps {
                script {
                    bat 'docker build -t tinyantu/simulate-service:latest -f Dockerfile .' // Agrega "." como contexto.
                }
            }
        }

        stage('Push image to Docker Hub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'dckhubpassword', variable: 'dhpsw')]) {
                        bat 'docker login -u tinyantu -p %dhpsw%' // Inicio de sesi√≥n en DockerHub
                    }
                    bat 'docker push tinyantu/simulate-service:latest' 
                }
            }
        }
    }
}

